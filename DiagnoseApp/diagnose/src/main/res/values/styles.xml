<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="diagnose_section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/diagnose_item_height</item>
        <item name="android:textColor">@color/diagnose_section_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/diagnose_section_title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="diagnose_section_item_pre">
        <item name="android:layout_width">@dimen/diagnose_section_item_pre_width</item>
        <item name="android:layout_height">@dimen/diagnose_item_height</item>
        <item name="android:textColor">@color/diagnose_section_item_pre</item>
        <item name="android:textSize">@dimen/diagnose_section_item_pre</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="diagnose_section_item_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">@dimen/diagnose_item_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/diagnose_section_item_value</item>
        <item name="android:textSize">@dimen/diagnose_section_item_value</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
